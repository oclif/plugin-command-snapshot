{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/Snapshots",
  "definitions": {
    "Snapshots": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/SnapshotEntry"
      }
    },
    "SnapshotEntry": {
      "type": "object",
      "properties": {
        "command": {
          "type": "string"
        },
        "plugin": {
          "type": "string"
        },
        "flags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "alias": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "command",
        "plugin",
        "flags",
        "alias"
      ],
      "additionalProperties": false
    }
  }
}